{
    "manifest_version": 3,
    "name": "Click Tracker",
    "version": "1.0",
    "description": "Отправляет клики на локальный сервер",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "http://localhost:8000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {}
}
