{
    "manifest_version": 3,
    "name": "Click Tracker",
    "version": "1.0",
    "description": "Отправляет клики на локальный сервер",
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "http://127.0.0.1:8111/*",
        "http://localhost:8111/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ]
}
